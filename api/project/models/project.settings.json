{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "projectname": {
      "type": "string"
    },
    "projectdescription": {
      "type": "text"
    },
    "projectduration": {
      "type": "string"
    },
    "projectcost": {
      "type": "integer"
    },
    "active": {
      "type": "boolean"
    },
    "projectstartdate": {
      "type": "date"
    },
    "projectowneremail": {
      "type": "email"
    },
    "projectmedia": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "projectenddate": {
      "type": "date"
    },
    "projectteam": {
      "type": "richtext"
    },
    "projecttype": {
      "type": "enumeration",
      "enum": [
        "fixed",
        "monthly",
        "weekly",
        "quarterly",
        "biannually",
        "annually",
        "subscription"
      ]
    },
    "projecttechnology": {
      "type": "richtext"
    },
    "customer": {
      "model": "customer",
      "via": "project"
    },
    "invoices": {
      "via": "project",
      "collection": "invoice"
    }
  }
}

{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "name": "Customer"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "customeremail": {
      "type": "string"
    },
    "customername": {
      "type": "string"
    },
    "customerphone": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "customeraddress": {
      "type": "string"
    },
    "customercountry": {
      "type": "string"
    },
    "businessname": {
      "type": "string"
    },
    "businesstaxid": {
      "type": "string"
    },
    "bankdetails": {
      "type": "string"
    },
    "customerremarks": {
      "type": "richtext"
    },
    "active": {
      "type": "boolean"
    },
    "dob": {
      "type": "date"
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "project": {
      "via": "customer",
      "model": "project"
    },
    "invoices": {
      "via": "customer",
      "collection": "invoice"
    }
  }
}
